<div class="columna">
    <form method="get" action="/quizes">
	<input type="submit" value="Buscar">
	<input type="text" name="search" placeholder="Texto a buscar"/>
    </form>
    <p>
       <a href="/quizes/new"><button id="crear" type="button">Crear pregunta</button></a>
    </p>
</div>

<div class="columna">
    <table>
	<tr>
    	   <th>Temática</th>
           <th>Pregunta</th>
	   <th colspan = "2">Opciones</th>
      	</tr>

        <% var i; for (i=0; i < quizes.length; i++) { %>        
           <tr>
	      <td id = "tematica">
		 <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].tema %></a>
	      </td>
	      <td id = "preguntas">
	         <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
	      </td>
	      <td class = "opciones">
		 <a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a>
	      </td>
	      <td class = "opciones">
        	 <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
          	    <button id="borrar" type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
            		borrar
          	    </button>
        	 </form>
      	      </td>
           </tr> 
        <% } %>
    </table>
</div>

